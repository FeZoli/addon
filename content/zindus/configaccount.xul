<?xml-stylesheet href="chrome://global/skin" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://zindus/locale/zindus.dtd">

<dialog
	id="zindus-ca-dialog"
	buttons="accept,cancel,extra2"
	buttonlabelextra2="&zindus.cs.buttonlabelextra2;"
	flex="1"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	onload="with (ZindusScopeRegistry.getScope()) { window.wd = new ConfigAccount(); } window.wd.onLoad(event.target);"
	oncommand="window.wd.onCommand(event.target.id);"
	ondialogaccept="window.wd.onAccept();"
	ondialogcancel="window.wd.onCancel();"
	ondialogextra2="with (ZindusScopeRegistry.getScope()) { openURL('http://www.zindus.com/faq-thunderbird/'); }"
	>

	<script type="application/x-javascript" src="chrome://zindus/content/scoperegistry.js"/>
	<script type="application/x-javascript" src="chrome://zindus/content/includes.js"/>
	<script type="application/x-javascript"> <![CDATA[
		with (ZindusScopeRegistry.getScope()) { includejs('configaccount.js'); }
	]]> </script>

	<stringbundleset> <stringbundle id="zindus-stringbundle" src="chrome://zindus/locale/zindus.properties" /> </stringbundleset>

	<vbox flex="1" style="&zindus.enclosing.vbox.style;" pack="center" >
		<command id="zindus-ca-command" oncommand="window.wd.onCommand(event.explicitOriginalTarget.id);" />
		<groupbox pack="center" >
			<caption label="&zindus.cs.account.type.label;" />
				<radiogroup id="zindus-ca-format-radiogroup" orient="horizontal" >
					<radio id="zindus-ca-format-google" selected="true" />
					<radio id="zindus-ca-format-zimbra" />
				</radiogroup>
		</groupbox>
		<spacer style="&zindus.spacer.style;" flex="1"/> 
		<groupbox pack="center" oninput="window.wd.onInput();" >
			<caption label="&zindus.ca.group.login.details.label;" />
			<grid flex="1" style="&zindus.ca.grid.style;" > 
				<columns>
					<column style="margin-left:15px" />
					<column flex="1" />
				</columns>
				<rows>
					<description id="zindus-ca-url-description" xmlns:html="http://www.w3.org/1999/xhtml"
					             style="margin-bottom:10px;" >
						&zindus.ca.url.description.value;
					</description>
					<row id="zindus-ca-url-row" >
						<label value="&zindus.ca.url.label;" />
						<textbox id="zindus-ca-url" onblur="window.wd.onBlur('zindus-ca-url');" />
					</row>
					<description value="&zindus.ca.username.description.value;" style="&zindus.description.style;" />
					<row>
						<label value="&zindus.ca.username.label;" />
						<textbox id="zindus-ca-username" onblur="window.wd.onBlur('zindus-ca-username');" />
					</row>
					<spacer style="&zindus.spacer.style;" />
					<row>
						<label value="&zindus.ca.password.label;" />
						<textbox id="zindus-ca-password" type="password" />
					</row>
					<spacer style="&zindus.spacer.style;" /> 
					<hbox align="left" style="margin-left:20px" >
						<button id="zindus-ca-button-authonly" command="zindus-ca-command" flex="1"
					        	align="center" label="&zindus.ca.test.connection.label;"
								accesskey="&zindus.ca.test.connection.accesskey;" />
					</hbox>
					<spacer style="&zindus.spacer.style;" flex="1"/> 
				</rows>
			</grid>
		</groupbox>
		<spacer style="&zindus.spacer.style;" flex="1"/> 
		<!-- pap == per account preferences -->

		<groupbox pack="center" >
			<caption label="&zindus.ca.group.pap.label;" />
			<deck id="zindus-ca-pap-deck" >
				<hbox>
					<vbox id="zindus-ca-gd-vbox" pack="center" >
						<label id="zindus-ca-gd-syncwith-label" />
						<radiogroup id="zindus-ca-gd-syncwith-radiogroup" >
							<radio id="zindus-ca-gd-syncwith-pab" label="&zindus.ca.google.sync.with.pab.label;" selected="true" />
							<radio id="zindus-ca-gd-syncwith-zg" />
						</radiogroup>
					</vbox>
					<spacer flex="1"/> 
				</hbox>
				<hbox>
					<vbox id="zindus-ca-zm-vbox" > <!-- pack="center" hbox pack="baseline" -->
					<label value="&zindus.ca.zimbra.gal.label;" />
					<menulist id="zindus-ca-zm-gal-menulist" >
						<menupopup>
							<menuitem id="zindus-ca-zm-gal-yes"      label="&zindus.ca.zimbra.gal.yes.label;" />
							<menuitem id="zindus-ca-zm-gal-if-fewer" label="" /> <!-- selected in initialiseView after label is set -->
							<menuitem id="zindus-ca-zm-gal-no"       label="&zindus.ca.zimbra.gal.no.label;" />
						</menupopup>
					</menulist>
					</vbox>
					<spacer flex="1"/> 
				</hbox>
			</deck>
		</groupbox>
		<spacer style="&zindus.spacer.style;" flex="1"/> 
	</vbox>

</dialog>
