<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://zindus/skin/zindus.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://zindus/locale/zindus.dtd">

<dialog
	id="gr-dialog"
	title="&zindus.gr.title;"
	buttons="accept,extra1,cancel"
	buttonlabelaccept="&zindus.gr.button.accept.label;"
	buttonlabelextra1="&zindus.gr.button.skip.label;"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	onload="with (ZindusScopeRegistry.getScope()) { window.wd = new GoogleRuleUnique(); } window.wd.onLoad();"
	ondialogaccept="return window.wd.onAccept();"
	ondialogcancel="return window.wd.onCancel();"
	ondialogextra1="return window.wd.onExtra1();"
	>

	<script type="application/x-javascript" src="chrome://zindus/content/scoperegistry.js"/>
	<script type="application/x-javascript" src="chrome://zindus/content/includes.js"/>

	<stringbundleset> <stringbundle id="zindus-stringbundle" src="chrome://zindus/locale/zindus.properties" /> </stringbundleset>

	<groupbox pack="center" style="min-width:50em" >
		<caption id="gr-top-caption" />

		<description id='gr-description' />
	</groupbox>

	<spacer class="zindus-spacer" flex="1"/>

	<groupbox>
		<caption id="gr-tree-caption" />
		<tree id="gr-tree" seltype="single" rows="5" enableColumnDrag="true" hidecolumnpicker="true" class="zindus-enclosing-vbox" >
			<treecols flex="1" >
				<treecol id="gr-column-1" persist="width ordinal hidden" flex="1" label="&zindus.gr.column.location.label;" />
				<splitter class="tree-splitter"/>
				<treecol id="gr-column-2" persist="width ordinal hidden" flex="1" label="&zindus.gr.column.displayname.label;" />
				<splitter class="tree-splitter"/>
				<treecol id="gr-column-3" persist="width ordinal hidden" flex="3" label="&zindus.gr.column.email.label;" />
				<splitter class="tree-splitter"/>
				<treecol id="gr-column-4" persist="width ordinal hidden" flex="7" label="&zindus.gr.column.summary.label;" width="30" />
			</treecols>
			<treechildren id="gr-treechildren" />
		</tree>
	</groupbox>
	<spacer class="zindus-spacer" flex="1"/>
	<hbox >
		<checkbox id="gr-dont-ask" style="margin-left:20px" />
	</hbox>
	<spacer class="zindus-spacer" flex="1"/>
</dialog>
