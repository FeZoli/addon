<!DOCTYPE window SYSTEM "chrome://zindus/locale/zindus.dtd">

<overlay
	id="zindus-mailwindowoverlay-sm" 
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	>

	<statusbar id="status-bar" >
		<statusbarpanel hidden="true" id="zindus-progresspanel" insertbefore="unreadMessageCount" >
			<label id="zindus-progresspanel-label-prefix" value="zindus:" />
			<stack>
				<progressmeter id="zindus-progresspanel-progress-meter" mode="normal" style="max-width: 20px; opacity: .25" value="50%" />
				<label id="zindus-progresspanel-progress-label" value="" style="max-width: 20px" crop="end" />
			</stack>
		</statusbarpanel>
		<statusbarpanel id="zindus-statuspanel" tooltiptext="" insertbefore="unreadMessageCount" class="statusbarpanel-iconic" >
			<image id="zindus-statuspanel-logo"   src="chrome://zindus/content/zindus-16x16-grey.jpg" />
			<label id="zindus-statuspanel-alert"  hidden="true" value="!" />
			<label id="zindus-statuspanel-error"  hidden="true" value="X" />
			<label id="zindus-statuspanel-insync" hidden="true" value="Y" />
		</statusbarpanel>
	</statusbar>

</overlay>
